{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "target": "es5",
    "lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"es2015",
			"es2016",
			"es2017",
			"es6"
		],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true
  },
  "include": [
		"src"
	],
  "exclude": [
		"node_modules",
		"lib",
		"typings"
	]
}
